# Uninstall target
message("Uninstalling...")

get_filename_component(TOPLEVEL "${CMAKE_CURRENT_LIST_FILE}" DIRECTORY)
get_filename_component(TOPLEVEL "${TOPLEVEL}" DIRECTORY)

message(STATUS "Removing ${TOPLEVEL}/build directory")
message(STATUS "Removing ${TOPLEVEL}/docs/build directory")
message(STATUS "Removing ${CMAKE_INSTALL_PREFIX}/bin/lib/passes directory")

execute_process(COMMAND ${CMAKE_COMMAND} -E remove_directory ${CMAKE_INSTALL_PREFIX}/bin/lib/passes)
execute_process(COMMAND ${CMAKE_COMMAND} -E remove_directory ${TOPLEVEL}/build)
execute_process(COMMAND ${CMAKE_COMMAND} -E remove_directory ${TOPLEVEL}/docs/build)
